      grid.letters.push({letter: 'o', c: 2, r: 1});
      grid.letters.push({letter: 's', c: 3, r: 1});
      grid.letters.push({letter: 'h', c: 4, r: 1});
      grid.letters.push({letter: 'w', c: 2, r: 2});
      grid.letters.push({letter: 'l', c: 2, r: 3});
      grid.letters.push({letter: 'e', c: 3, r: 3});
      grid.letters.push({letter: 'w', c: 4, r: 3});
      grid.letters.push({letter: 'i', c: 5, r: 3});
      grid.letters.push({letter: 's', c: 6, r: 3});
      grid.init();
      animations.push(grid);
      animate();